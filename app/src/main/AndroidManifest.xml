<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.w1.merchant.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.screen.portrait" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/LoginActivityTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MenuActivity"
            android:theme="@style/MenuActivityTheme"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.AddInvoice"
            android:theme="@style/AppThemeNoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.ConfirmActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.ConfirmPayment"
            android:theme="@style/AppThemeNoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.ConfirmOutActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.EditTemplate"
            android:theme="@style/AppThemeNoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.Details"
            android:theme="@style/AppThemeNoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.UserEntryTotal"
            android:theme="@style/AppThemeNoActionBar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".support.TicketListActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_ticket_list" >
        </activity>
        <activity
            android:name=".support.ConversationActivity"
            android:label="@string/title_activity_conversation"
            android:theme="@style/ConversationActivityTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:parentActivityName=".support.TicketListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.w1.merchant.android.support.TicketListActivity"/>
        </activity>
        <activity
            android:name=".support.CreateTicketActivity"
            android:label="@string/title_activity_create_ticket"
            android:parentActivityName=".support.TicketListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.w1.merchant.android.support.TicketListActivity" />
        </activity>
        <activity
            android:name=".activity.SessionExpiredDialogActivity"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:theme="@style/SessionExpiredDialogTheme"/>
    </application>

</manifest>
