<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme. -->

    <style name="AppThemeWithActionBarBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item> -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:progressBarStyleLarge">@style/ProgressBarLarge</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CirclePageIndicator</item>
        <item name="actionBarSize">52dp</item>
    </style>

    <style name="AppThemeWithActionBar" parent="AppThemeWithActionBarBase">
    </style>

    <style name="AppTheme" parent="AppThemeWithActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ConversationActivityTheme" parent="AppThemeWithActionBar">
        <item name="android:windowBackground">@color/conversation_background_color</item>
        <item name="android:colorBackground">@color/conversation_background_color</item>
        <item name="android:colorBackgroundCacheHint">@color/conversation_background_color</item>
    </style>

    <style name="LoginActivityTheme" parent="AppTheme">
    </style>

    <style name="SessionExpiredDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="IntroThemeBase" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/banner_bgr</item>
        <item name="android:colorBackground">#1c2b36</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/IntroAnimation</item>
    </style>

    <style name="IntroTheme" parent="IntroThemeBase">
    </style>

    <style name="SelectPrincipalActivityTheme" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="SelectPrincipalDialogTheme" parent="SelectPrincipalActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.96</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/SelectPrincipalAnimation</item>
    </style>

    <style name="ShowPhotoThemeBase" parent="Theme.AppCompat">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
        <item name="android:colorBackgroundCacheHint">@android:color/background_dark</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="ShowPhotoTheme" parent="ShowPhotoThemeBase">
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="ListViewStyle" parent="Widget.AppCompat.ListView">
    </style>

    <style name="ActionBarToolbarStyleBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ActionBarToolbarStyle" parent="ActionBarToolbarStyleBase">
    </style>

    <style name="ToolbarSecondActivityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="navigationIcon">@drawable/ic_menu_back_small</item>
    </style>

    <style name="ConversationMessageDate">
        <item name="android:visibility">gone</item>
        <item name="android:textColor">#909090</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="EmptyTextStyle">
        <item name="android:textColor">#d3d3d3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ToolbarSecondTitleTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TicketListSubjectTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RedButtonTextAppearanceBase" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/positive_red_button_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PositiveRedButtonTextAppearance" parent="RedButtonTextAppearanceBase"/>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#dd2c00</item>
    </style>

    <style name="DrawerMenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/navdrawer_menu_text_color</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="IntroAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SelectPrincipalAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_fast</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="DetailsItemTitle">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#646464</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="DetailsItemValue">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ProgressBarLarge" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">76dp</item>
        <item name="android:maxWidth">76dp</item>
        <item name="android:minHeight">76dp</item>
        <item name="android:maxHeight">76dp</item>
    </style>

    <style name="ErrorView">
        <item name="android:textAppearance">@style/ErrorTextAppearance</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PositiveRedButton" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">@style/PositiveRedButtonTextAppearance</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="PaymentFormFieldTitle">
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="PaymentFormFieldValue">
        <item name="android:saveEnabled">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CirclePageIndicator">
        <item name="fillColor">#ffffffff</item>
        <item name="pageColor">#30ffffff</item>
        <item name="strokeColor">#00000000</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">3dp</item>
        <item name="centered">true</item>
    </style>


</resources>