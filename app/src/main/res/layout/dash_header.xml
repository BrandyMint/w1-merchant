<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <android.support.v4.view.ViewPager
		 android:id="@+id/vpDash"
		 android:background="#000000"
		 android:layout_width="match_parent"
		 android:layout_height="70dp">
	</android.support.v4.view.ViewPager>
    
	<LinearLayout
            android:background="#000000"
            android:gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
		    <ImageView 
		        android:id="@+id/ivPercent"
		        android:layout_gravity="center_vertical"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		    <TextView 
		        android:id="@+id/tvPercent"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="10dp"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
	</LinearLayout>
	
	<com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:background="#000000"
        android:layout_height="150dp" />
	
	<!-- LinearLayout
            android:id="@+id/llPlot"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dp"/-->

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="53dp"
	    android:gravity="center_horizontal"
	    android:background="#000000"
	    android:orientation="horizontal" >
	    	    
			<com.w1.merchant.android.viewextended.SegmentedRadioGroup
	            android:id="@+id/srgDash"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="20dp"
	            android:checkedButton="@+id/button_one"
	            android:orientation="horizontal" >
	
				<RadioButton android:id="@+id/rbHour"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
					android:minWidth="100dip"
					android:minHeight="33dip"
					android:text="@string/hour_24"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:button="@null"
					android:gravity="center"
					android:textColor="@color/radio_colors" />
				<RadioButton android:id="@+id/rbWeek"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
					android:minWidth="100dip"
					android:minHeight="33dip"
					android:text="@string/week"
					android:button="@null"
					android:gravity="center"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="@color/radio_colors" />
				<RadioButton android:id="@+id/rbMonth"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
					android:minWidth="100dip"
					android:minHeight="33dip"
					android:text="@string/month"
					android:button="@null"
					android:gravity="center"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="@color/radio_colors" />
			</com.w1.merchant.android.viewextended.SegmentedRadioGroup>
	</LinearLayout>
	
	<TextView 
	    	android:text="@string/last_oper"
	    	android:textSize="10pt"
	    	android:layout_marginTop="10dp"
	    	android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	
</LinearLayout>
