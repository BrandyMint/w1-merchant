<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#FFFFFF"
    	android:orientation="horizontal" >
    	<ImageView 
	    	android:id="@+id/ivBack"
	    	android:layout_margin="20dp"
	    	android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/icon_back" />
	    <TextView 
	    	android:id="@+id/tvOutputName"
	    	android:textSize="10pt"
	    	android:text="Вика Master"
	    	android:layout_gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	    <ProgressBar
	        android:id="@+id/pbTemplates"
	        android:gravity="right"
	        android:visibility="invisible"
	        android:layout_margin="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
    </LinearLayout>
    
		<ImageView 
		    android:id="@+id/ivOutputIcon"
		    android:layout_margin="5dp"
		    android:scaleType="fitCenter"
		    android:layout_gravity="center_horizontal"
		    android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/icon_ok_big" />
			
		<TextView 
		    	android:text="@string/card_number"
		    	android:layout_marginTop="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		
		<TextView 
		    	android:id="@+id/tvCardNumber"
		    	android:text="8439 8227 6543 2345"
		    	android:textSize="10pt"
		    	android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		
		<TextView 
		    	android:text="@string/sum_commis"
		    	android:layout_marginTop="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		
		<ru.bokus.w1.ViewExtended.EditTextRouble 
		    	android:id="@+id/etSumCommis"
		    	android:textSize="10pt"
		    	android:text="14165 C"
		    	android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		
		<TextView 
		    	android:text="@string/sum_output"
		    	android:layout_marginTop="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		
		<ru.bokus.w1.ViewExtended.EditTextRouble 
		    	android:id="@+id/etSumOutput"
		    	android:textSize="10pt"
		    	android:text="14000 C"
		    	android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		
		<TextView 
		    	android:id="@+id/tvRemove"
		    	android:text="@string/remove"
		    	android:textSize="10pt"
		    	android:textColor="#f00"
		    	android:layout_gravity="center_horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		
		<ru.bokus.w1.ViewExtended.TextViewRouble
				android:id="@+id/tvComisAlgoritm"
				android:layout_marginTop="10dp"		     
		    	android:text="Коммиссия 1% + 25C, сумма от 1C до 15000C"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		
</LinearLayout>
